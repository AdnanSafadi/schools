<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Adnan Al-Safadi"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/profile_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_name"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey" />

    <ImageView
        android:id="@+id/email_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/profile_view"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_email" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_view"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/email_image"
        android:text="Admin@sky.com"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <View
        android:id="@+id/profile_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/email_image"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey" />


    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/profile_view2"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_smartphone" />

    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_view2"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/phone_image"
        android:text="+963798101630"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <View
        android:id="@+id/profile_view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_phone"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey" />


    <ImageView
        android:id="@+id/birthday_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_below="@+id/profile_view3"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/giftbox" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_view3"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/birthday_image"
        android:text="13/10/1994"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <View
        android:id="@+id/profile_view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@+id/birthday"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey" />


    <ImageView
        android:id="@+id/class_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/profile_view4"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_class"
        android:visibility="gone" />

    <TextView
        android:id="@+id/clazz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_view4"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/birthday_image"
        android:text="عاشر"
        android:textColor="@color/Black"
        android:textDirection="ltr"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/profile_view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/clazz"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/school_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/profile_view5"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_school"
        android:visibility="gone" />

    <TextView
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_view5"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/birthday_image"
        android:text="مدرسة آوتاد"
        android:textColor="@color/Black"
        android:textDirection="ltr"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/profile_view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/school"
        android:layout_marginStart="74dp"
        android:background="@color/dark_grey" />


</RelativeLayout>